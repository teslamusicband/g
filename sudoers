#!/bin/bash

# –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è
USER="user1"
PASSWORD="user1"
SUDOERS_LINE="$USER ALL=(ALL) NOPASSWD: ALL"
SUDOERS_FILE="/etc/sudoers.d/$USER"
SERVERS=("host1.domain" "host2.domain")  # –∑–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ —Ä–µ–∞–ª—å–Ω—ã–µ —Ö–æ—Å—Ç—ã
LOGFILE="sudoers_update.log"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
if ! command -v sshpass &>/dev/null; then
    echo "‚ùå –¢—Ä–µ–±—É–µ—Ç—Å—è —É—Å—Ç–∞–Ω–æ–≤–∏—Ç—å sshpass. –ó–∞–≤–µ—Ä—à–µ–Ω–∏–µ." | tee -a "$LOGFILE"
    exit 1
fi

# –ì–ª–∞–≤–Ω—ã–π —Ü–∏–∫–ª
for HOST in "${SERVERS[@]}"; do
    echo "=== [$HOST] –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞—á–∞—Ç–∞ ===" | tee -a "$LOGFILE"

    sshpass -p "$PASSWORD" ssh -o StrictHostKeyChecking=no "$USER@$HOST" bash -s <<'EOF'
set -e

echo "[$(hostname)] üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: \$(whoami)"
if [ "\$(whoami)" != "user1" ]; then
    echo "‚ùå –û—à–∏–±–∫–∞: –æ–∂–∏–¥–∞–µ—Ç—Å—è user1, –Ω–æ –∑–∞–ø—É—â–µ–Ω–æ –æ—Ç \$(whoami)"
    exit 1
fi

# –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è sudo
SUDO="echo user1 | sudo -S"

# –ü—Ä–æ–≤–µ—Ä–∫–∞, –µ—Å—Ç—å –ª–∏ —Ñ–∞–π–ª
if $SUDO test -f /etc/sudoers.d/user1; then
    echo "[$(hostname)] ‚ö†Ô∏è  –§–∞–π–ª —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç. –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ..."
    EXISTING_CONTENT="\$($SUDO cat /etc/sudoers.d/user1)"
    if [ "\$EXISTING_CONTENT" == "$SUDOERS_LINE" ]; then
        echo "[$(hostname)] ‚úÖ –°—Ç—Ä–æ–∫–∞ —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç. –ü—Ä–æ–ø—É—Å–∫."
        exit 0
    else
        echo "[$(hostname)] ‚ö†Ô∏è  –°—Ç—Ä–æ–∫–∞ –æ—Ç–ª–∏—á–∞–µ—Ç—Å—è. –ü–µ—Ä–µ–∑–∞–ø–∏—Å—å."
        $SUDO rm -f /etc/sudoers.d/user1
    fi
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –∞—Ç—Ä–∏–±—É—Ç 'immutable'
if $SUDO lsattr /etc/sudoers.d &>/dev/null; then
    ATTRS=\$($SUDO lsattr -d /etc/sudoers.d)
    if echo "\$ATTRS" | grep -q 'i'; then
        echo "[$(hostname)] ‚ö†Ô∏è  –ê—Ç—Ä–∏–±—É—Ç 'i' –Ω–∞–π–¥–µ–Ω, —É–¥–∞–ª–µ–Ω–∏–µ..."
        $SUDO chattr -i /etc/sudoers.d
    fi
fi

# –ó–∞–ø–∏—Å—å —Å—Ç—Ä–æ–∫–∏ –≤ —Ñ–∞–π–ª
echo "$SUDOERS_LINE" | $SUDO tee /etc/sudoers.d/user1 >/dev/null
$SUDO chmod 0440 /etc/sudoers.d/user1
echo "[$(hostname)] ‚úÖ –°—Ç—Ä–æ–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∞ –≤ /etc/sudoers.d/user1"

EOF

    echo "=== [$HOST] –û–±—Ä–∞–±–æ—Ç–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞ ===" | tee -a "$LOGFILE"
done
